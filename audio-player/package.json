{
  "name": "electron-audio-player",
  "description": "Example of simple audio player in Electron.",
  "version": "1.6.0",
  "author": "akabeko",
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "keywords": [
    "Electron",
    "Audio",
    "Player"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akabekobeko/examples-electron.git"
  },
  "esdoc": {
    "source": "./src/js",
    "destination": "./esdoc",
    "plugins": [
      {
        "name": "esdoc-jsx-plugin",
        "option": {
          "enable": true
        }
      },
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "test": {
            "source": "./src/js"
          }
        }
      }
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.8"
          }
        }
      ],
      "react"
    ],
    "env": {
      "development": {
        "presets": [
          "power-assert"
        ]
      }
    }
  },
  "config": {
    "app": "AudioPlayer",
    "appCompanyName": "Company",
    "appLegalCopyright": "Copylight (C) USERNAME, All right reserved.",
    "appFileDescription": "Electron application"
  },
  "scripts": {
    "start": "npm run watch",
    "app": "electron --inspect=5858 src/",
    "test": "mocha --require babel-register src/js/**/*.test.js",
    "esdoc": "esdoc",
    "eslint": "eslint ./src/js",
    "build:js-main": "webpack --env.main --mode development",
    "build:js-renderer": "webpack --mode development",
    "build": "npm-run-all -p build:*",
    "watch:js-main": "webpack --env.main --mode development --watch",
    "watch:js-renderer": "webpack --mode development --watch",
    "watch": "npm-run-all -p watch:*",
    "release:js-main": "webpack --env.main --mode production",
    "release:js-renderer": "webpack --mode production",
    "release:clean": "rimraf ./dist/src",
    "release:copy": "cpx \"./src/**/!(*.js|*.css|*.scss|*.styl|*.map)\" ./dist/src/",
    "release:build": "npm-run-all -s release:clean release:copy -p release:js-main release:js-renderer",
    "release:pack-mac": "cross-conf-env electron-packager ./dist/src npm_package_config_app --out=dist/bin --download.cache=dist/cache --platform=darwin --arch=x64 --overwrite --asar --icon=src/res/app.icns",
    "release:pack-win": "cross-conf-env electron-packager ./dist/src npm_package_config_app --out=dist/bin --download.cache=dist/cache --platform=win32 --arch=x64 --overwrite --asar --icon=src/res/app.ico --version-string.CompanyName=\"npm_package_config_appCompanyName\" --version-string.LegalCopyright=\"npm_package_config_appLegalCopyright\" --version-string.FileDescription=\"npm_package_config_appFileDescription\" --version-string.OriginalFilename=\"npm_package_config_app.exe\" --version-string.FileVersion=\"npm_package_version\" --version-string.ProductVersion=\"npm_package_version\" --version-string.ProductName=\"npm_package_config_app\" --version-string.InternalName=\"npm_package_config_app\"",
    "release:pack-linux": "cross-conf-env electron-packager ./dist/src npm_package_config_app --out=dist/bin --download.cache=dist/cache --platform=linux --arch=x64 --overwrite --asar",
    "release:mac": "npm-run-all -s release:build release:pack-mac",
    "release:win": "npm-run-all -s release:build release:pack-win",
    "release:linux": "npm-run-all -s release:build release:pack-linux",
    "release": "npm-run-all -s release:build release:pack-*"
  },
  "dependencies": {
    "dataurl": "^0.1.0",
    "material-flux": "^1.4.0",
    "mime-types": "^2.1.18",
    "music-metadata": "^2.3.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-split-pane": "^0.1.77"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-power-assert": "^2.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "cpx": "^1.5.0",
    "cross-conf-env": "^1.1.2",
    "css-loader": "^0.28.11",
    "devtron": "^1.4.0",
    "electron": "^2.0.0",
    "electron-packager": "^12.0.2",
    "esdoc": "^1.1.0",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.8.2",
    "eslint-plugin-standard": "^3.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mocha": "^5.1.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "power-assert": "^1.5.0",
    "resolve-url-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  }
}
